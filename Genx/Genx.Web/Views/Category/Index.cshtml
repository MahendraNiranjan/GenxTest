@model IEnumerable<Category>
<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary text-white"><i class="fas fa-plus"></i> &nbsp; Create New Category</a>
        </div>
    </div>
    <br />
    <br />
    <div class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <th>Category Name</th>
                    <th>IsActive</th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var category in Model)
            {
<tr>
    <td>@category.CategoryName</td>
    <td>@category.IsActive</td>
    <td>
        <a asp-action="Upsert" asp-route-id="@category.CategoryId" class="btn btn-primary text-white">Edit</a>
    </td>
</tr>}
        </table>
    </div>
</div>
